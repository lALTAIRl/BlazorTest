@page "/sign-in"
@inject HttpClient Http
@inject Blazored.LocalStorage.ILocalStorageService localStorage

<PageTitle>Sign-in</PageTitle>
<h1>Sign-in</h1>

<div class="sign-in-wrapper container">
    <form>
        <div class="row">
            <label class="col-2">Email</label>
            <div class="col-6">
                <input class="form-control sign-in-input" type="text" placeholder="Email" />
            </div>
        </div>
        <div class="row">
            <label class="col-2">Password</label>
            <div class="col-6">
                <input class="form-control sign-in-input" type="password" placeholder="Password" />
            </div>
        </div>
    </form>
    <button class="btn btn-primary"  @onclick="SignIn">Sign-in</button>
</div>

@code {
    private async Task SignIn()
    {
        //TODO: move to separate service
        var response = await Http.PostAsync("https://localhost:42045/identity/login", null);
        var userId = response.Content.ReadAsStringAsync().Result;
        Console.WriteLine(userId);

        await localStorage.SetItemAsync("Authorization", userId);

        //testing
        var localStorageValue = await localStorage.GetItemAsync<string>("Authorization");
        Console.WriteLine(localStorageValue);
    }
}
